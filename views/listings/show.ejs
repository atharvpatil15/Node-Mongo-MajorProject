<% layout('layouts/boilerplate') -%>
  <body>

    <div class="row">
      <div class="col-8 offset-2" style="padding: 0px;">
    <h3 class="mt-3">listing details</h3>

    <div class="card" >
      <img src="<%= listing.image %>" class="card-img-top show-image" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= listing.title %></h5>

          <p><%= listing.description %></p>
          <p>&#8377;<%= listing.price.toLocaleString("en-IN") %></p>
          <p ><%= listing.location %>, <%= listing.country %></p>
       
          <div class="row">
        
        <div class="col-12 col-md-6 mb-2">
       <a href="/listing/<%=listing._id%>/edit" class="btn btn-dark w-100">EDIT</a>
        </div>
        <div class="col-12 col-md-6 mb-2">
        <form method="POST" action="/listing/<%=listing._id%>?_method=DELETE" ><button class="btn btn-danger w-100">DELETE</button></form>
        </div>
      </div>

      </div>
    </div>

  </div>
</div>
    
  </body>

